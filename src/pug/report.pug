<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="utf-8")
		title Репортажи
		include inc/head.pug
		include inc/css.pug
	body.inner.loading
		include inc/header.pug
		include inc/mobileMenu.pug
		main#content
			.main-slider__cont
				.main-slider
					- for (let i = 0; i < 3; i++)
						.main-slider__slide
							figure.main-slider__slide-img
								picture
									<!-- Большая картинка -->
									source(data-main="" media="screen and (orientation: landscape)" srcset="img/photos/report-banner.jpg")
										
									<!-- Картинка для телефонов -->
									source(media="screen and (orientation: portrait)" srcset="img/photos/adaptive-banner.jpg")
									img
								.slide-decor(style="color: #f8f6f5")
							.main-slider__slide-desc
								.wrapper
									.main-slider__slide-text «Моногамия противоречит человеческой природе»
									.main-slider__slide-title Интервью со Скарлетт Йоханссон
				.main-slider__arrows
					.wrapper
			.main__nav
				.wrapper
					.main-nav
						.main-nav__search
							a.search-link(href="#" title="Поиск")
						nav.main-nav__menu
							ul.main-menu
								each title in ["Репортажи", "События", "Эксклюзив", "Заведения", "Музыка"]
									li
										a.main-menu__link(href="#")=title
						.main-nav__lc
							a.lc-link(href="#" title="Личный кабинет")
			.inner-content
				.title-block__cont
					.wrapper
						.title-block
							.title-block__title
								h1 Заголовок первого уровня
							.title-block__btn
								button.filter-toggle
				.filter__cont
					.wrapper
						.filter
							form(action="#")
								.filter__inputs
									.filter__select(placeholder="Дата")
										label.filter__select-label Дата
										select(multiple="").filter-select
											option(value="1") 31.07.18
											option(value="2") 32.07.18
											option(value="3") 33.07.18
											option(value="4") 34.07.18
											option(value="5") 35.07.18
											option(value="6") 36.07.18
									.filter__select(placeholder="Место")
										label.filter__select-label Место
										select(multiple="").filter-select
											option(value="1") Место 1
											option(value="2") Место 3
											option(value="3") Место 2
											option(value="4") Место 4
											option(value="5") Место 5
									.filter__submit 
										.z-item__arrow
											input.filter-submit(type="submit" value="Применить")
										a.filter-reset(href="#" title="Сбросить фильтр") 
											span Сбросить
				.wrapper
					#photoReport
						<!-- Обрати внимание на этот блок во второй версии главной -->
						photo-report
					.main-content__banner
						a.main-banner(href="#")
							picture
								source(media="screen and (min-width: 1000px)" srcset="img/photos/main-banner.jpg" data-main="")
								source(media="screen and (max-width: 1000px) and (min-width: 660px)" srcset="img/photos/main-banner-tab.jpg")
								source(media="screen and (max-width: 660px)" srcset="img/photos/main-banner-mobile.jpg")
								img
		include inc/footer.pug
		include inc/scripts.pug